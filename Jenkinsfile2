pipeline {
    agent any

    parameters {
        string(name: 'USERNAME', defaultValue: 'guest', description: 'Enter your name')
        choice(name: 'ENVIRONMENT', choices: ['dev', 'test', 'prod'], description: 'Choose environment')
        booleanParam(name: 'DEPLOY', defaultValue: true, description: 'Deploy after build?')
    }

    stages {
        stage('Greet User') {
            steps {
                echo "üëã Hello, ${params.USERNAME}"
                echo "üåç Environment selected: ${params.ENVIRONMENT}"
            }
        }
        stage('Build App') {
            when {
                expression { return params.DEPLOY }
            }
            steps {
                echo "üõ† Building and deploying to ${params.ENVIRONMENT}..."
            }
        }
    }
}
